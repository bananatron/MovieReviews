<p>
  <strong>Movie:</strong>
  <%= link_to @review.movie.name, @review.movie %>
</p>
<% if @movie.moviedb_id == nil %>
<br> We can't get much information about this movie. Can you <%= link_to 'help identify it?', confirm_movie_path(@movie) %></a>
<% end %>


<p>
  <strong>Score:</strong>
  <%= @review.score %><br>
</p>

<p>
  <strong>Summary:</strong>
  <%= @review.summary %>
</p>

<p>
  <strong>Posted by  <%= link_to @review.user.username, @review.user %></strong>
</p>

<!-- Show appropriate voting button -->
<% if current_user != nil %>
  <%  if Vote.where(review_id:@review, user_id:current_user.id).count < 1 %>
    <%= button_to '+1', upvote_review_path(@review), method: :post, :class => "button small radius round" %>
  <% else %>
    <%= button_to '-1', delete_vote_review_path(@review), method: :post, :class => "button small radius round" %>
  <% end %>
<% else %>
  Login to vote!<br>
<% end %>


<% if @review.updated_at != @review.created_at %>
<!--<p>Edited on: <%= @review.updated_at.to_s(:rfc822) %> PST</p>-->
<% end %>



