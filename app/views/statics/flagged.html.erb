<% if current_user && current_user.description == "admin" %>
  <h3>Movies:</h3>
  <table>
    <% @movies.each do |movie| %>
      <tr><td>
        <%= link_to movie.name.to_s, movie_path(movie.id) %><br>
      </td></tr>
    <% end %>
  </table>

  <br><br>
  <h3>Reviews:</h3>
  <table>
    <% @reviews.each do |review| %> 
      <tr><td>
      <%= link_to "#" + review.id.to_s, review_path(review.id) %><br>
      </td></tr>
    <% end %>
  </table>
<% end %>
